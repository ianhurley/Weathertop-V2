{{> menu id="dashboard"}}

{{#each stations}}
  <section class="ui segment">
    <h2 class="ui header">
      {{name}}
    </h2>
    {{> station-panel}}
    <table class="ui celled table">
      <thead>
        <tr>
          <th>Code</th>
          <th>Temp</th>
          <th>Wind Speed</th>
          <th>Pressure</th>
        </tr>
      </thead>
      <tbody>
        {{#each readings}}
          <tr>
            <td>
              {{code}}
            </td>
            <td>
              {{temperature}}
            </td>
            <td>
              {{windSpeed}}
            </td>
            <td>
              {{pressure}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
{{/each}}
